<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    tools:context=".MainCancel"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:gravity="top"
    android:padding="38dp">


    <androidx.cardview.widget.CardView
        app:cardPreventCornerOverlap="true"
        android:elevation="4dp"
        cardview:cardCornerRadius="4dp"
        android:clickable="true"
        app:cardBackgroundColor="#0B0A0A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ProgressBar

            android:progressTint="#ffffff"
            android:id="@+id/progress_time_cancel"
            android:max="100"
            android:min="0"
            android:backgroundTint="#000"
            android:indeterminateTint="@android:color/white"
            android:layout_margin="0dp"
            android:padding="0dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:padding="18dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="23sp"
                    android:textColor="#FB0000"
                    android:text="CLIENTE CANCELOU"
                    android:fontFamily="@font/boltsemibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    android:id="@+id/nome_loja_cancel"
                    android:textColor="#FDFAFA"
                    android:text="POPS T11"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>